    <servlet>
    	<description>
    	</description>
    	<display-name>
    	CaptchaServlet</display-name>
    	<servlet-name>CaptchaServlet</servlet-name>
    	<servlet-class>
    	com.ipablive.core.CaptchaServlet</servlet-class>
    </servlet>
    <servlet>
    	<description>
    	</description>
    	<display-name>
    	IPaidService</display-name>
    	<servlet-name>IPaidService</servlet-name>
    	<servlet-class>
    	com.ipablive.services.IPaidService</servlet-class>
    </servlet>
    <servlet>
    	<description>
    	</description>
