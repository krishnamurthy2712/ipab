<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.ipab.view.ApplicationHeader")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			[Bindable]
			private var msg:String = "Type \"city, department and amount\"";
		]]>
	</fx:Script>
	<s:Group width="100%" height="100%">
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:SolidColor color="#514040"/>
			</s:fill>
		</s:Rect>
		<s:VGroup width="100%" height="100%">
			
			<s:HGroup width="100%" paddingLeft="10" paddingRight="10" paddingTop="10">
				<s:Image source="assets/images/i-paid-a-bribe-logo.png" 
						 toolTip="I PAID A BRIBE" left="10" top="5"/>
				<s:VGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
					<s:Label text="SMS your bribe report" color="#000000"/>
					<s:Label text="{msg}" color="#ffffe2"/>
					<s:Label text="SMS your bribe report"/>
				</s:VGroup>
				<s:VGroup right="10" top="5" toolTip="janaagraha" 
						  verticalAlign="middle" horizontalAlign="center">
					<s:Label text="An initiative by" right="10" top="5" color="white"/>
					<s:Image source="assets/images/ijanaagraha-logo.jpg" />
				</s:VGroup>
			</s:HGroup>
			<mx:MenuBar width="100%" left="10" bottom="120" id="mainMenu" labelField="@label"/>
		</s:VGroup>
	</s:Group>
	
	
</s:Skin>
